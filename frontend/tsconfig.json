{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["@emotion/react/types/css-prop", "jest", "node", "react", "react-dom", "typography", "@testing-library/jest-dom"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.cy.tsx"],
  "references": [
    // Uncomment to work on Cypress tests, recomment when running the frontend or pushing to GitHub
    /*
    {
      "path": "./tsconfig.cy.json"
    },
    */
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
