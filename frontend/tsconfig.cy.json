{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["@emotion/react/types/css-prop", "node", "react", "react-dom", "typography", "cypress"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "outDir": "./out-cy",
  },
  "files": ["./cypress.config.ts"],
  "include": ["../node_modules/cypress", "cypress", "**/*.cy.tsx", "./cypress.d.ts", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["**/*.test.tsx"]
}